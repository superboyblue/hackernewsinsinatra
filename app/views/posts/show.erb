<h2><%=@post.title%></h2>
<%if logged_in?%>
<form method="POST" action="/comments" id="new-comment-form">
  <input type="hidden" name="comment.post_id" value="<%=@post.id%>">
  <input type="text" name="text" placeholder="new comment">
  <input type="submit" value="submit">
  </form>
<%end%>

<%@post.comments.each do |comment|%>
<br><%=comment.text%><br>
<a href="/users/<%=comment.user.id%>"><%=comment.user.username%></a>  <%=comment.created_at%><br>
<%end%>
